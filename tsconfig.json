{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "./src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "core-js/es7/reflect": [
        "node_modules/core-js/proposals/reflect-metadata"
      ],
      "lt-components": [
        "dist/lt-components"
      ],
      "lt-components/*": [
        "dist/lt-components/*"
      ],
      "@services/*": ["app/services/*"],
      "@models/*": ["app/models/*"]
    }
  }
}